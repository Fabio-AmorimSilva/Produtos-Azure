@model UpdateProductDto

@{
    ViewBag.Title = "Update";
    Layout = "_Layout";
}

<h2>-- Update Register--</h2>

<form class="collapse-horizontal" asp-action="Update" method="post">
    <input type="text" hidden="hidden" asp-for="ProductId"/>
    <label>Name:</label>
    <input type="text" asp-for="Name" placeholder="Name...."/>
    <select class="form-select" asp-for="ProductCategory" aria-label="Category">
        @foreach (var category in Enum.GetValues(typeof(ProductCategory)))
        {
            if (Model?.ProductCategory == (ProductCategory)category)
            {
                <option selected="selected" value="@category">@category</option>
            }
            else
            {
                <option value="@category">@category</option>
            }
        }
    </select>
    <button type="submit" class="btn btn-primary">Update</button>
</form>