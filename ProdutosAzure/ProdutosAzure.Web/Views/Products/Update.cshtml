@model UpdateProductDto

@{
    ViewBag.Title = "Update";
    Layout = "_Layout";
}

<h2 class="d-flex justify-content-center">Edit</h2>

<div class="d-flex justify-content-center mb-3">
    <form asp-action="Update" method="post">
        <input class="form-control" type="text" hidden="hidden" asp-for="ProductId"/>
        <label class="form-label">Name:</label>
        <input class="form-control" type="text" asp-for="Name" placeholder="Name...."/>
        <label class="form-label">Category:</label>
        <select class="form-select" asp-for="ProductCategory" aria-label="Category">
            @foreach (var category in Enum.GetValues(typeof(ProductCategory)))
            {
                if (Model?.ProductCategory == (ProductCategory)category)
                {
                    <option selected="selected" value="@category">@category</option>
                }
                else
                {
                    <option value="@category">@category</option>
                }
            }
        </select>
        <button class="btn btn-primary" type="submit">Update</button>
    </form>
</div>